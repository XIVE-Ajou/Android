<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setting.SettingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="24dp"
            android:paddingStart="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:src="@drawable/all_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="설정"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/backBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/backBtn" />


        <View
            android:id="@+id/rectangle1"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/gray60"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backBtn" />

        <TextView
            android:id="@+id/textAccount"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="24dp"
            android:letterSpacing="-0.02"
            android:text="로그인 계정"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rectangle1" />

        <ImageView
            android:id="@+id/accountIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/setting_kakao_small"
            app:layout_constraintBottom_toBottomOf="@+id/name"
            app:layout_constraintEnd_toStartOf="@+id/name"
            app:layout_constraintTop_toTopOf="@+id/name" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textAccount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textAccount" />

        <TextView
            android:id="@+id/textLink"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="카카오 계정 연동하기"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:letterSpacing="-0.02"
            app:layout_constraintStart_toStartOf="@+id/textAccount"
            app:layout_constraintTop_toBottomOf="@+id/textAccount" />

        <ImageView
            android:id="@+id/switchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_switch"
            app:layout_constraintBottom_toBottomOf="@+id/textLink"
            app:layout_constraintEnd_toEndOf="@+id/name"
            app:layout_constraintTop_toTopOf="@+id/textLink" />

        <View
            android:id="@+id/rectangle2"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#F4F4F4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textLink" />

        <TextView
            android:id="@+id/textAsk"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="1:1 문의"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:letterSpacing="-0.02"
            app:layout_constraintEnd_toEndOf="@+id/askMove"
            app:layout_constraintStart_toStartOf="@+id/textLink"
            app:layout_constraintTop_toBottomOf="@+id/rectangle2" />

        <ImageView
            android:id="@+id/askMove"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/setting_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/textAsk"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textAsk" />

        <View
            android:id="@+id/rectangle3"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/gray60"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textAsk" />

        <TextView
            android:id="@+id/tac"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="서비스 이용 약관"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:letterSpacing="-0.02"
            app:layout_constraintEnd_toEndOf="@+id/tosMove"
            app:layout_constraintStart_toStartOf="@+id/textAsk"
            app:layout_constraintTop_toBottomOf="@+id/rectangle3" />

        <ImageView
            android:id="@+id/tosMove"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/setting_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/tac"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tac" />

        <TextView
            android:id="@+id/privacyPolicy"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="개인정보 처리 방침"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:letterSpacing="-0.02"
            app:layout_constraintEnd_toEndOf="@+id/privacyPolicyMove"
            app:layout_constraintStart_toStartOf="@+id/tac"
            app:layout_constraintTop_toBottomOf="@+id/tac" />

        <ImageView
            android:id="@+id/privacyPolicyMove"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/setting_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/privacyPolicy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/privacyPolicy" />

        <View
            android:id="@+id/rectangle5"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/gray60"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/privacyPolicy" />

        <TextView
            android:id="@+id/textVersion"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="버전 정보"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:letterSpacing="-0.02"
            app:layout_constraintEnd_toStartOf="@+id/version"
            app:layout_constraintStart_toStartOf="@+id/tac"
            app:layout_constraintTop_toBottomOf="@+id/rectangle5" />

        <TextView
            android:id="@+id/version"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="v.1.0.1"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:letterSpacing="-0.02"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="@+id/textVersion"
            app:layout_constraintEnd_toEndOf="@+id/privacyPolicy"
            app:layout_constraintTop_toTopOf="@+id/textVersion" />

        <View
            android:id="@+id/rectangle6"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/gray60"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textVersion" />

        <TextView
            android:id="@+id/logout"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="24dp"
            android:text="로그아웃"
            android:textColor="@color/gray100"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:letterSpacing="-0.02"
            app:layout_constraintEnd_toEndOf="@+id/version"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rectangle6" />

        <TextView
            android:id="@+id/withdrawal"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="24dp"
            android:text="회원탈퇴"
            android:textColor="@color/gray100"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:letterSpacing="-0.02"
            app:layout_constraintEnd_toEndOf="@+id/version"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logout" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>